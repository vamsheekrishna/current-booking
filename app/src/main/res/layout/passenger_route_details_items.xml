<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/white_background_rounded_corner"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_booking_status_field"
                style="@style/text_style_extra_medium_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="12dp"
                android:textAllCaps="true"
                android:textColor="@color/green" />

            <TextView
                android:id="@+id/tv_route_name_field"
                style="@style/text_style_extra_medium_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/button_bg" />

            <TextView
                android:id="@+id/tv_bus_type_field"
                style="@style/text_style_medium_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_semi_bold"
                android:textColor="@color/black_color_two"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_bus_route_field"
                style="@style/text_style_medium_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/black_color_two" />

            <RelativeLayout
                style="@style/text_style_medium_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_bus_journey_start_time_field"
                    style="@style/text_style_medium_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/black_color_two" />

                <View
                    android:id="@+id/view_circle_one"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/tv_bus_journey_start_time_field"
                    android:background="@drawable/green_color_small_rounded_circle_bg" />

                <View
                    android:id="@+id/view_circle_two"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_toStartOf="@id/tv_bus_journey_end_time_field"
                    android:background="@drawable/green_color_small_rounded_circle_bg" />

                <TextView
                    android:id="@+id/tv_bus_journey_end_time_field"
                    style="@style/text_style_medium_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textColor="@color/black_color_two" />

                <TextView
                    android:id="@+id/tv_bus_journey_hours_field"
                    style="@style/text_style_medium_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textColor="@color/black_color_two" />

                <View
                    android:id="@+id/gray_color_one"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/tv_bus_journey_hours_field"
                    android:layout_toEndOf="@+id/view_circle_one"
                    android:background="@color/edit_text_border_color" />

                <View
                    android:id="@+id/gray_color_two"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/view_circle_two"
                    android:layout_toEndOf="@id/tv_bus_journey_hours_field"
                    android:background="@color/edit_text_border_color" />

            </RelativeLayout>
        </LinearLayout>

