<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner_background_bg"
    android:minHeight="80dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_weight="0.8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_route_name_field"
            style="@style/text_style_extra_medium_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="KMT BUS 3245  "
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/tv_bus_type_field"
            style="@style/text_style_medium_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="Non AC Semi Luxury"
            android:textColor="@color/edit_text_border_color" />

        <TextView
            android:id="@+id/tv_bus_route_field"
            style="@style/text_style_medium_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="Hyderabad to Banglore" />

        <LinearLayout
            style="@style/text_style_medium_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_bus_journey_start_time_field"
                style="@style/text_style_medium_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="05:45" />

            <View
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/small_rounded_circle_bg" />

            <View
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:background="@color/gray_color" />

            <TextView
                android:id="@+id/tv_bus_journey_hours_field"
                style="@style/text_style_medium_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="3 Hrs"
                android:textColor="@color/edit_text_border_color" />

            <View
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:background="@color/gray_color" />

            <View
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/small_rounded_circle_bg" />

            <TextView
                android:id="@+id/tv_bus_journey_end_time_field"
                style="@style/text_style_medium_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="08:45" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="5dp"
        android:layout_weight="0.2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_bus_fare_price_field"
            style="@style/text_style_extra_medium_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="Rs.175" />

        <Button
            android:id="@+id/btn_book_now_field"
            style="@style/text_style_extra_medium_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="@string/book_now"
            android:textColor="@color/book_color" />
    </LinearLayout>

</LinearLayout>