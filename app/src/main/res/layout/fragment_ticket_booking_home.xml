<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ticketbooking.TicketBookingHomeFragment">
    <fragment
        android:layout_alignParentTop="true"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="290dp" />
    <ScrollView
        android:background="@drawable/login_body_bg"
        android:translationZ="90dp"
        android:layout_marginTop="260dp"
        android:layout_above="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_margin="16dp"
            android:layout_marginBottom="0dp"
            android:layout_gravity="top"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/select_transport"
                android:drawableStart="@drawable/user_thumb"
                android:drawableLeft="@drawable/user_thumb"
                android:hint="@string/select_state_transport"
                style="@style/text_view" />
            <androidx.appcompat.widget.AppCompatTextView
                android:visibility="gone"
                android:id="@+id/select_bus_type"
                android:drawableStart="@drawable/user_thumb"
                android:drawableLeft="@drawable/user_thumb"
                android:hint="@string/select_bus_type"
                style="@style/text_view" />
            <!--<TextView
                android:layout_marginTop="16dp"
                android:text="@string/select_bus_type"
                android:textSize="14sp"
                android:fontFamily="@font/opensans_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_select_type"
                android:orientation="horizontal"
                android:scrollbars="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>-->
            <include
                android:visibility="gone"
                android:id="@+id/bus_point"
                android:layout_marginTop="16dp"
                layout="@layout/select_bus_points"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:padding="16dp"
        android:id="@+id/search"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <Button
            android:background="#FFFFFF"
            android:id="@+id/select_bus"
            android:text="@string/search"
            style="@style/button_gray"
            android:layout_margin="0dp"/>
    </LinearLayout>
</RelativeLayout>